<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- 顶部返回按钮 + 标题行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- 返回按钮 -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:layout_marginRight="10dp"/>

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投票模板"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- 页面说明文字 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择一个模板快速创建投票"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- 模板列表 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 模板1: 员工评选 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="员工评选模板"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_pink"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热门"
                            android:textSize="12sp"
                            android:textColor="@color/success"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="适用于评选优秀员工、最佳团队等"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="示例选项：\n• 张三\n• 李四\n• 王五\n• 赵六"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint_pink"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btn_use_template_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="使用此模板"
                        android:backgroundTint="#2196F3"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 模板2: 活动策划 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="活动策划模板"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_pink"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="常用"
                            android:textSize="12sp"
                            android:textColor="@color/warning"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="适用于团建活动、年会节目等决策"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="示例选项：\n• 户外拓展\n• KTV聚会\n• 温泉度假\n• 自由活动"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint_pink"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btn_use_template_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="使用此模板"
                        android:backgroundTint="#2196F3"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 模板3: 意见调查 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="意见调查模板"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary_pink"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="适用于产品反馈、服务满意度等调查"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="示例选项：\n• 非常满意\n• 满意\n• 一般\n• 不满意\n• 非常不满意"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint_pink"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btn_use_template_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="使用此模板"
                        android:backgroundTint="#2196F3"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>